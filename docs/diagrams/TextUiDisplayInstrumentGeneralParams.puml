@startuml
'https://plantuml.com/sequence-diagram
!include Styles.puml

box ui COLOR_LIGHT_BLUE
participant ":TextUi" as TextUi COLOR_UI
end box

box model COLOR_MODEL_SEGMENT
participant ":Instrument" as Instrument COLOR_MODEL
end box

[-> TextUi : displayAllInstruments(ArrayList<Instrument> instruments)
activate TextUi

TextUi -> TextUi : displayInstruments()
activate TextUi

note bottom
TextUi.displayAllInstruments()
invoked from ListCommand.execute()
end note

    loop each instrument
        TextUi -> TextUi : constructLineInList(idx, instrument)
        activate TextUi

        TextUi -> Instrument : getGeneralParams()
        activate Instrument

        Instrument --> TextUi
        deactivate Instrument

        note bottom
        Instrument.getGeneralParams()
        returns the instrument's name, current price,
        and sentiment as String.
        end note

        deactivate TextUi
end

deactivate TextUi


@enduml